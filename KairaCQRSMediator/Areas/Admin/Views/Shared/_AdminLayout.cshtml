<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Kaira Admin</title>

    <link rel="stylesheet" href="~/Breeze-Free-Bootstrap-Admin-Template-1.0.0/template/assets/vendors/mdi/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="~/Breeze-Free-Bootstrap-Admin-Template-1.0.0/template/assets/vendors/css/vendor.bundle.base.css" />
    <link rel="stylesheet" href="~/Breeze-Free-Bootstrap-Admin-Template-1.0.0/template/assets/css/style.css" />

    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .container-scroller {
            min-height: 100vh;
            display: flex;
        }

        .page-body-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .main-panel {
            flex: 1;
            display: flex;
            flex-direction: column;
            background-color: #f5f7ff;
        }

        .content-wrapper {
            flex: 1;
            padding: 2rem;
            background-color: #f5f7ff;
        }

        .footer {
            background-color: #fff;
            border-top: 1px solid #e8ecf1;
            padding: 1.5rem;
            margin-top: auto;
        }
    </style>
</head>
<body>
    <div class="container-scroller">
        <!-- Sidebar -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="text-center sidebar-brand-wrapper d-flex align-items-center">
                <a class="sidebar-brand brand-logo" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <h2 class="text-white">KAIRA</h2>
                </a>
            </div>
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="mdi mdi-home menu-icon"></i>
                        <span class="menu-title">Ana Sayfa</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">
                        <i class="mdi mdi-folder menu-icon"></i>
                        <span class="menu-title">Kategoriler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Product" asp-action="Index">
                        <i class="mdi mdi-package-variant menu-icon"></i>
                        <span class="menu-title">Ürünler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Service" asp-action="Index">
                        <i class="mdi mdi-wrench menu-icon"></i>
                        <span class="menu-title">Hizmetler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Testimonial" asp-action="Index">
                        <i class="mdi mdi-comment menu-icon"></i>
                        <span class="menu-title">Yorumlar</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Brand" asp-action="Index">
                        <i class="mdi mdi-tag menu-icon"></i>
                        <span class="menu-title">Markalar</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Collection" asp-action="Index">
                        <i class="mdi mdi-shape-plus menu-icon"></i>
                        <span class="menu-title">Koleksiyon</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="PhotoGallery" asp-action="Index">
                        <i class="mdi mdi-image menu-icon"></i>
                        <span class="menu-title">Galeri</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="SocialMedia" asp-action="Index">
                        <i class="mdi mdi-share-variant menu-icon"></i>
                        <span class="menu-title">Sosyal Medya</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Subscribe" asp-action="Index">
                        <i class="mdi mdi-email menu-icon"></i>
                        <span class="menu-title">Aboneler</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="ContactInfo" asp-action="Index">
                        <i class="mdi mdi-phone menu-icon"></i>
                        <span class="menu-title">İletişim Bilgileri</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="container-fluid page-body-wrapper">
            <!-- Top Navbar -->
            <nav class="navbar col-lg-12 col-12 p-lg-0 fixed-top d-flex flex-row">
                <div class="navbar-menu-wrapper d-flex align-items-stretch justify-content-between">
                    <button class="navbar-toggler navbar-toggler align-self-center mr-2" type="button" data-toggle="minimize">
                        <i class="mdi mdi-menu"></i>
                    </button>
                    <ul class="navbar-nav navbar-nav-right ml-lg-auto">
                        <li class="nav-item nav-profile dropdown border-0">
                            <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-toggle="dropdown">
                                <span class="profile-name">Admin</span>
                            </a>
                            <div class="dropdown-menu navbar-dropdown w-100" aria-labelledby="profileDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index" target="_blank">
                                    <i class="mdi mdi-eye mr-2"></i> Siteyi Görüntüle
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="mdi mdi-logout mr-2"></i> Çıkış Yap
                                </a>
                            </div>
                        </li>
                    </ul>
                    <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                        <span class="mdi mdi-menu"></span>
                    </button>
                </div>
            </nav>

            <!-- Main Panel -->
            <div class="main-panel">
                <div class="content-wrapper">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            @TempData["Error"]
                            <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                        </div>
                    }

                    @RenderBody()
                </div>

                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © @DateTime.Now.Year Kaira</span>
                    </div>
                </footer>
            </div>
        </div>
    </div>

    <script src="~/Breeze-Free-Bootstrap-Admin-Template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/Breeze-Free-Bootstrap-Admin-Template-1.0.0/template/assets/js/off-canvas.js"></script>
    <script src="~/Breeze-Free-Bootstrap-Admin-Template-1.0.0/template/assets/js/hoverable-collapse.js"></script>
    <script src="~/Breeze-Free-Bootstrap-Admin-Template-1.0.0/template/assets/js/misc.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
