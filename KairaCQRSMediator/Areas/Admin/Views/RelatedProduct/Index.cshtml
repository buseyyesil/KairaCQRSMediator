@model List<KairaCQRSMediator.Features.Mediator.Results.RelatedProductResults.GetRelatedProductQueryResult>
@{
    ViewData["Title"] = "Önerilen Ürünler";
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="card-title">Önerilen Ürünler</h4>
            <a asp-action="CreateRelatedProduct" class="btn btn-primary">
                <i class="mdi mdi-plus"></i> Yeni Ürün Ekle
            </a>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Resim</th>
                            <th>Ürün Adı</th>
                            <th>Fiyat</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RelatedProductId</td>
                                <td>
                                    <img src="@item.ImageUrl" alt="@item.ProductName" style="width:80px; height:80px; object-fit:cover; border-radius:5px;">
                                </td>
                                <td>@item.ProductName</td>
                                <td>@item.Price.ToString("N2") ₺</td>
                                <td>
                                    <a asp-action="UpdateRelatedProduct" asp-route-id="@item.RelatedProductId" class="btn btn-warning btn-sm">
                                        <i class="mdi mdi-pencil"></i> Düzenle
                                    </a>
                                    <a asp-action="DeleteRelatedProduct" asp-route-id="@item.RelatedProductId" class="btn btn-danger btn-sm"
                                       onclick="return confirm('Bu ürünü silmek istediğinizden emin misiniz?')">
                                        <i class="mdi mdi-delete"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">Henüz ürün eklenmemiş.</div>
        }
    </div>
</div>