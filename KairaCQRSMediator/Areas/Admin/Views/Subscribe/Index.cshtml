@model List<KairaCQRSMediator.Features.Mediator.Results.SubscribeResults.GetSubscribeQueryResult>
@{
    ViewData["Title"] = "Aboneler";
}

<div class="page-header">
    <h3 class="page-title">E-Posta Aboneleri</h3>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Abone Listesi</h4>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Email</td>
                                    <td>@item.SubscribeDate.ToShortDateString()</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge badge-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Pasif</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="3" class="text-center">Abone bulunamadı</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>