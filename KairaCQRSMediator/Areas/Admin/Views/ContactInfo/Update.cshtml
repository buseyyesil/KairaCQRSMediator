@model KairaCQRSMediator.Features.Mediator.Commands.ContactInfoCommands.UpdateContactInfoCommand
@{
    ViewData["Title"] = "İletişim Bilgileri Güncelle";
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">İletişim Bilgileri Güncelle</h4>
                <form asp-action="Update" method="post">
                    <input type="hidden" asp-for="ContactInfoId" />
                    <div class="form-group">
                        <label>Telefon</label>
                        <input asp-for="Phone" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="Email" type="email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Adres</label>
                        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Çalışma Saatleri</label>
                        <input asp-for="WorkingHours" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <a asp-action="Index" class="btn btn-light">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>