@model List<KairaCQRSMediator.Features.Mediator.Results.SocialMediaResults.GetSocialMediaQueryResult>
@{
    ViewData["Title"] = "Sosyal Medya";
}

<div class="page-header">
    <h3 class="page-title">Sosyal Medya</h3>
    <a asp-action="Create" class="btn btn-primary">Yeni Ekle</a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Platform</th>
                    <th>URL</th>
                    <th>İkon</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.Platform</td>
                            <td>@item.Url</td>
                            <td>@item.Icon</td>
                            <td>
                                <a asp-action="Update" asp-route-id="@item.SocialMediaId" class="btn btn-warning btn-sm">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@item.SocialMediaId" class="btn btn-danger btn-sm">Sil</a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>