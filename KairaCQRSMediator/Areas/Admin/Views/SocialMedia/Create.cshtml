@model KairaCQRSMediator.Features.Mediator.Commands.SocialMediaCommands.CreateSocialMediaCommand
@{
    ViewData["Title"] = "Sosyal Medya Ekle";
}

<div class="card">
    <div class="card-body">
        <h4>Yeni Sosyal Medya</h4>
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label>Platform</label>
                <input asp-for="Platform" class="form-control" />
            </div>
            <div class="form-group">
                <label>URL</label>
                <input asp-for="Url" class="form-control" />
            </div>
            <div class="form-group">
                <label>İkon</label>
                <input asp-for="Icon" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" class="btn btn-light">İptal</a>
        </form>
    </div>
</div>