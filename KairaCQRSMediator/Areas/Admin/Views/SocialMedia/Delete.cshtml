@model KairaCQRSMediator.Features.Mediator.Results.SocialMediaResults.GetSocialMediaByIdQueryResult
@{
    ViewData["Title"] = "Sil";
}

<div class="card">
    <div class="card-body">
        <h4 class="text-danger">Silmek istediğinize emin misiniz?</h4>
        <p>Platform: @Model.Platform</p>
        <p>URL: @Model.Url</p>
        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.SocialMediaId" />
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-action="Index" class="btn btn-light">İptal</a>
        </form>
    </div>
</div>