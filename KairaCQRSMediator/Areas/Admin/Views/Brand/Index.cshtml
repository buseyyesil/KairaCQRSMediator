@model List<KairaCQRSMediator.Features.CQRS.Results.BrandResults.GetBrandQueryResult>
@{
    ViewData["Title"] = "Markalar";
}

<div class="page-header">
    <h3 class="page-title">Markalar</h3>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <h4 class="card-title">Marka Listesi</h4>
                    <a asp-action="Create" class="btn btn-primary btn-sm">Yeni Marka</a>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Marka Adı</th>
                            <th>Logo URL</th>
                            <th>Sıra</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BrandName</td>
                                    <td>@item.LogoUrl</td>
                                    <td>@item.DisplayOrder</td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@item.BrandId" class="btn btn-warning btn-sm">Düzenle</a>
                                        <a asp-action="Delete" asp-route-id="@item.BrandId" class="btn btn-danger btn-sm">Sil</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="4" class="text-center">Marka bulunamadı</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>