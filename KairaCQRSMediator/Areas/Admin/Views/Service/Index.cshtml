@model List<KairaCQRSMediator.Features.CQRS.Results.ServiceResults.GetServiceQueryResult>
@{
    ViewData["Title"] = "Hizmetler";
}

<div class="page-header">
    <h3 class="page-title">Hizmetler</h3>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <h4 class="card-title">Hizmet Listesi</h4>
                    <a asp-action="Create" class="btn btn-primary btn-sm">Yeni Hizmet</a>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Icon</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.Icon</td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@item.ServiceId" class="btn btn-warning btn-sm">Düzenle</a>
                                        <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-danger btn-sm">Sil</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="4" class="text-center">Hizmet bulunamadı</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>