@model List<KairaCQRSMediator.Features.CQRS.Results.TestimonialResults.GetTestimonialQueryResult>
@{
    ViewData["Title"] = "Yorumlar";
}

<div class="page-header">
    <h3 class="page-title">Müşteri Yorumları</h3>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <h4 class="card-title">Yorum Listesi</h4>
                    <a asp-action="Create" class="btn btn-primary btn-sm">Yeni Yorum</a>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Müşteri</th>
                            <th>Başlık</th>
                            <th>Yorum</th>
                            <th>Puan</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CustomerName</td>
                                    <td>@item.Title</td>
                                    <td>@(item.Comment.Length > 50 ? item.Comment.Substring(0, 50) + "..." : item.Comment)</td>
                                    <td>@item.Rating / 5</td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@item.TestimonialId" class="btn btn-warning btn-sm">Düzenle</a>
                                        <a asp-action="Delete" asp-route-id="@item.TestimonialId" class="btn btn-danger btn-sm">Sil</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="5" class="text-center">Yorum bulunamadı</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>