@model List<KairaCQRSMediator.Features.CQRS.Results.CategoryResults.GetCategoryQueryResult>

<section id="billboard" class="bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <h1 class="section-title text-center mt-4" data-aos="fade-up">Yeni Koleksiyon</h1>
            <div class="col-md-6 text-center" data-aos="fade-up" data-aos-delay="300">
                <p>
                    Yeni sezon koleksiyonlarımızı keşfedin. En trend parçalar ve özel tasarımlar sizleri bekliyor!
                </p>
            </div>
        </div>

        <div class="row">
            <div class="swiper main-swiper py-4" data-aos="fade-up" data-aos-delay="600">

               
                <div class="swiper-wrapper border-animation-left">

                    @foreach (var category in Model ?? Enumerable.Empty<KairaCQRSMediator.Features.CQRS.Results.CategoryResults.GetCategoryQueryResult>())
                    {
                        <div class="swiper-slide">
                            <div class="banner-item image-zoom-effect">
                                <div class="image-holder">
                                    <a href="/Category/@category.CategoryId">
                                        <img src="@category.ImageUrl"
                                             alt="@category.CategoryName"
                                             class="img-fluid">
                                    </a>
                                </div>
                                <div class="banner-content py-4">
                                    <h5 class="element-title text-uppercase">
                                        <a href="/Category/@category.CategoryId" class="item-anchor">
                                            @category.CategoryName
                                        </a>
                                    </h5>
                                    <p>Yeni sezon @category.CategoryName koleksiyonunu keşfedin.</p>
                                    <div class="btn-left">
                                        <a href="/Category/@category.CategoryId"
                                           class="btn-link fs-6 text-uppercase item-anchor text-decoration-none">
                                            İncele
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model == null || !Model.Any())
                    {
                        <div class="swiper-slide">
                            <div class="banner-item image-zoom-effect">
                                <div class="image-holder">
                                    <a href="#">
                                        <img src="~/kaira-1.0.0/images/foto.jpg"
                                             alt="New Collection"
                                             class="img-fluid">
                                    </a>
                                </div>
                                <div class="banner-content py-4">
                                    <h5 class="element-title text-uppercase">
                                        <span class="item-anchor">New Collection</span>
                                    </h5>
                                    <p>Henüz kategori eklenmemiş.</p>
                                </div>
                            </div>
                        </div>
                    }

                </div>

                <div class="swiper-pagination"></div>
            </div>

            <div class="icon-arrow icon-arrow-left">
                <svg width="50" height="50" viewBox="0 0 24 24">
                    <use xlink:href="#arrow-left"></use>
                </svg>
            </div>

            <div class="icon-arrow icon-arrow-right">
                <svg width="50" height="50" viewBox="0 0 24 24">
                    <use xlink:href="#arrow-right"></use>
                </svg>
            </div>
        </div>
    </div>
</section>
