@model List<KairaCQRSMediator.Features.Mediator.Results.PhotoGalleryResults.GetPhotoGalleryQueryResult>

<section class="instagram position-relative">
    <div class="d-flex justify-content-center w-100 position-absolute bottom-0 z-1">
        <a href="https://www.instagram.com/" class="btn btn-dark px-5">Follow us on Instagram</a>
    </div>
    <div class="row g-0">
        @foreach (var photo in Model)
        {
            <div class="col-6 col-sm-4 col-md-2">
                <div class="insta-item">
                    <a href="https://www.instagram.com/" target="_blank">
                        <img src="@photo.ImageUrl" alt="instagram" class="insta-image img-fluid">
                    </a>
                </div>
            </div>
        }
    </div>
</section>