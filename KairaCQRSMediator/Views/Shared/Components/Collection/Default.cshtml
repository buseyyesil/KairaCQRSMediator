@model KairaCQRSMediator.Features.Mediator.Results.CollectionResults.GetCollectionQueryResult

@if (Model != null)
{
    <section class="collection bg-light position-relative py-5">
        <div class="container">
            <div class="row">
                <div class="title-xlarge text-uppercase txt-fx domino">Collection</div>
                <div class="collection-item d-flex flex-wrap my-5">
                    <div class="col-md-6 column-container">
                        <div class="image-holder">
                            <img src="@Model.ImageUrl" alt="@Model.Title" class="product-image img-fluid">
                        </div>
                    </div>
                    <div class="col-md-6 column-container bg-white">
                        <div class="collection-content p-5 m-0 m-md-5">
                            <h3 class="element-title text-uppercase">@Model.Title</h3>
                            <p>@Model.Description</p>
                            <a href="#" class="btn btn-dark text-uppercase mt-3">Koleksiyonu Keşfet</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}